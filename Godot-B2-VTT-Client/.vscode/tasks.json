{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build (Linux)",
			"type": "shell",
			"command": "scons",
			"args": [
				"platform=linux",
			],
				"-j16"
			"group": "build"
		},
        {
            "label": "Build (Windows)",
            "type": "process",
            "command": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/VC/Auxiliary/Build/vcvars64.bat",
            "args": [
                "&",
                "scons",
                "platform=windows",
                "-j16"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}